@model TransactionViewModel
@{
    ViewBag.Title = "";
    Layout = "_Layout";
}

@if (ViewBag.Result != null)
{
    <div class="alert alert-success text-center">
        <h5>@ViewBag.Result</h5>
    </div>
}


<div class="container">
    <div class="row row-cols-1 mt-5">
        <div class="col col-6 mx-auto">
            <div class="row row-cols-2">
                <div class="col col-10 bg-white mx-auto text-center">
                    <div class="row">
                        <div class="col col-12 border border-1 py-4 px-5">
                            <h5>Перевод на счет</h5>
                            <form asp-action="Create" asp-controller="Transaction" method="post">
                                @Html.ValidationSummary(true)
                                <div class="input-group mt-2">
                                    <label asp-for="RecipientAccountNumber">Cчет назначения</label>
                                    <div class="input-group">
                                        <span class="text-danger" asp-validation-for="SenderAccountNumber"></span>
                                        <input asp-for="RecipientAccountNumber" type="text" class="form-control" placeholder="Счет назначения" id="toAccount">
                                    </div>
                                </div>
                                
                                <div class="input-group mt-2">
                                    <label asp-for="Amount">Сумма перевода</label>
                                    <div class="input-group">
                                        <span class="text-danger" asp-validation-for="Amount"></span>
                                        <input asp-for="Amount" type="text" class="form-control" placeholder="Сумма перевода" id="amount">
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary rounded-2 w-100 mt-3">
                                    <span>Перевести</span>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}
